;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
// gruvbox color
background = #282828
foreground = #ebdbb2

dark_red = #cc241d
dark_green = #98971a
dark_yellow = #d79921
dark_blue = #458588
dark_purple = #b16286
dark_aqua = #659d6a
dark_gray = #a89984
dark_orange = #d65d0e

light_gray = #928374
light_red = #fb4934
light_green = #b8bb26
light_yellow = #fabd2f
light_blue = #83a598
light_purple = #d3869b
light_acqua = #8ec07c
light_orange = #fe8019

bg0_h = #1d2021
bg0 = #282828
bg1 = #3c3836
bg2 = #504945
bg3 = #665c54
bg4 = #7c6f64
bg0_s = #32302f

fg0 = #fbf1c7
fg1 = #ebdbb2
fg2 = #d5c4a1
fg3 = #bdae93
fg4 = #a89984

[bar/top]

; Monitor setting
monitor =
monitor-fallback = 
monitor-strict = false
; i3 integration
wm-restack = i3
override-redirect = false 
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

; bar position and size
bottom = false

fixed-center = true

width = 100%
height = 20

offset-x = 0
offset-y = 0

; Color
background = ${colors.bg0_h}
foreground = ${colors.foreground}

; Radius for roundend corner
radius = 0.0

; Under-/overline pixel size and argb color
line-size = 0
line-color = ${colors.dark_red}

; Number of spaces to add at the beggining end of the bar
padding = 0

; Number of spaces to add before/after each module
module-margin = 0

; Border option
border-bottom-size = 2
border-bottom-color = ${colors.bg1}

border-top-size = 2
border-top-color = ${colors.bg1}

border-left-size = 2
border-left-color = ${colors.bg1}

border-right-size = 2
border-right-color = ${colors.bg1}



; Font are defined using <font-name>;<vertical-offset>
;font-0 = Source Code Pro:size = 9;2
;font-1 = FontAwesome:size=11;2
font-0 = SauceCodePro Nerd Font:size = 9;2

; Modules Position
modules-left = arch-logo i3 date
modules-center = 
modules-right = temperature wired-network volume

; separator
separator = " " 



; Opacity value between 0.0 and 1.0 used on fade in/out
dim-value = 1.0

; Position of the system tray window
; If empty or undefined, tray support will be disabled
; NOTE: A center aligned tray will cover center aligned modules
;
; Available positions:
;   left
;   center
;   right
tray-position = right


; If true, the bar will not shift its
; contents when the tray changes
tray-detached = false

; Tray icon max size
tray-maxsize = 16

; Enable pseudo transparency
; Will automatically be enabled if a fully transparent
; background color is defined using `tray-background`
tray-transparent = false

; Background color for the tray container
; By default the tray container will use the bar
; background color.
; Note: 32 bit alpha blending is not supported.
tray-background = ${colors.bg0_h}

; Tray offset defined as pixel value (e.g. 35) or percentage (e.g. 50%)
tray-offset-x = 0
tray-offset-y = 0

; Pad the sides of each tray icon
tray-padding = 0

; Scale factor for tray clients
tray-scale = 1.0

; wm-name
wm-name = i3
; locale
locale = it_IT.UTF-8

;------------------------------------------------------------------------------

[module/arch-logo]
type = custom/script
exec = echo ""
format = <label>
tail = false
#interval = 90
format-background = ${colors.bg0_h}
format-foreground = ${colors.light_blue}
format-padding = 1
label = %output%


[module/date]
type = internal/date
#date-alt =   %A %H:%M
date =  %A %d %b  %H:%M
;date = -->  <--
interval = 5
format-underline = ${colors.bg1}
format-overline = ${colors.bg1}
format-background = ${colors.bg0_h}
format-foreground = ${colors.foreground}
format-padding = 1

[module/battery]
type = internal/battery
full-at = 98
; ls -l /sys/class/power_supply/
battery = BAT0
adapter = ACAD

time-format = %H:%M

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

label-charging = Charging %percentage%%
label-discharging = Discharging %percentage%% %time%
label-full = Fully charged %percentage%%

format-charging-underline = ${colors.bg1}
format-discharging-underline = ${colors.bg1}
format-full-underline = ${colors.bg1}

format-charging-overline = ${colors.bg1}
format-discharging-overline = ${colors.bg1}
format-full-overline = ${colors.bg1}

format-charging-padding = 1
format-discharging-padding = 1
format-full-padding = 1

format-charging-background = ${colors.bg0_h}
format-discharging-background = ${colors.bg0_h}
format-full-background = ${colors.bg0_h}

format-charging-foreground = ${colors.light_orange}
format-discharging-foreground = ${colors.light_red}
format-full-foreground = ${colors.light_green}

; Only applies if <ramp-capacity> is used
    
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750


[module/i3]
type = internal/i3
index-sort = true
strip-wsnumber = true
pin-workspace = true
enable-click = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-default =  

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 1
label-mode-background = ${colors.background}

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %name%:%icon%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.dark_blue}
label-focused-underline =  ${colors.light_blue}
label-focused-padding = 1

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-unfocused =  %name%:%icon%
label-unfocused-padding = 1

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-visible =  %name%:%icon%
label-visible-background = ${colors.light_green}
label-visible-underline = ${colors.dark_green}
label-visible-padding = 1

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent =  %name%:%icon%
label-urgent-foreground = ${colors.foreground}
label-urgent-background = ${colors.light_red}
label-urgent-padding = 1

[module/wired-network]
type = internal/network
interface = enp3s0 

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss> <label-connected>

label-connected = | %downspeed:%| %upspeed:%|
label-disconnected = 

label-connected-foreground = ${colors.light_green}
label-connected-background = ${colors.bg0_h}
label-connected-underline = ${colors.bg1}
label-connected-overline = ${colors.bg1}

label-disconnected-foreground = ${colors.dark_red}
label-disconnected-background = ${colors.bg0_h}
label-disconnected-underline = ${colors.bg1}
label-disconnected-overline = ${colors.bg1}

[module/wireless-network]
type = internal/network
interface = wlp0s26u1u1

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss> <label-connected>

label-connected = |%downspeed:9%|%upspeed:9%|
label-disconnected = 

label-connected-foreground = ${colors.light_green}
label-connected-background = ${colors.bg0_h}
label-connected-underline = ${colors.bg1}
label-connected-overline = ${colors.bg1}

label-disconnected-foreground = ${colors.dark_red}
label-disconnected-background = ${colors.bg0_h}
label-disconnected-underline = ${colors.bg1}
label-disconnected-overline = ${colors.bg1}

[module/temperature]
type = internal/temperature
interval = 1
thermal-zone = 0
warn-temperature = 70

; Available tags:
;   <label> (default)
;   <ramp>
format = <label>

; Available tags:
;   <label-warn> (default)
;   <ramp>
format-warn = <label-warn>

; Available tokens:
;   %temperature% (default)
label = T:%temperature%
label-foreground = ${colors.light_green}
label-background = ${colors.bg0_h}
label-underline = ${colors.bg1}
label-overline = ${colors.bg1}
; Available tokens:
;   %temperature% (default)
label-warn = TEMP %temperature%
label-warn-foreground = ${colors.light_red}
label-warn-background = ${colors.bg0_h}
label-warn-underline = ${colors.bg1}
label-warn-overline = ${colors.bg1}

; Requires the <ramp> tag
; The icon selection will range from 0 to `warn-temperature`
; with the current temperature as index.

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume> 

format-volume-foreground = ${colors.foreground}
format-volume-background = ${colors.bg0_h}
format-volume-underline = ${colors.bg1}
format-volume-overline = ${colors.bg1}

label-volume = %{T3}%{T-}
label-volume-foreground = ${colors.light_green}

format-muted = <label-muted>
format-muted-foreground = ${colors.light_red}
format-muted-background = ${colors.bg0_h}
format-muted-underline = ${colors.bg1}
format-muted-overline = ${colors.bg1}
label-muted =  ────────

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.light_green}
bar-volume-foreground-1 = ${colors.light_green}
bar-volume-foreground-2 = ${colors.dark_green}
bar-volume-foreground-3 = ${colors.dark_green}
bar-volume-foreground-4 = ${colors.dark_yellow}
bar-volume-foreground-5 = ${colors.dark_orange}
bar-volume-foreground-6 = ${colors.dark_red}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-fill = ━
bar-volume-empty = ─
bar-volume-empty-foreground = ${colors.foreground}

[module/xbacklight]
type = internal/xbacklight
format = <label>

; Available tokens:
;   %percentage% (default)
label = %percentage%%

; Only applies if <ramp> is used
ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑

; Only applies if <bar> is used
bar-width = 10
bar-indicator = |
bar-fill = ─
bar-empty = ─

; vim:ft=dosini
